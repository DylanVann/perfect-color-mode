{
  "private": true,
  "workspaces": [
    "docs",
    "examples/*",
    "packages/*"
  ],
  "scripts": {
    "build": "yarn && wsrun --stages --exclude-missing build && yarn build:md",
    "build:md": "node -r esm -r esbuild-register build.ts",
    "serve": "wsrun --exclude-missing serve",
    "test": "wsrun --exclude-missing test"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.2",
    "esbuild": "^0.7.21",
    "esbuild-register": "^1.1.0",
    "esm": "^3.2.25",
    "fs-extra": "^9.0.1",
    "netlify-cli": "^2.67.0",
    "prettier": "^2.1.2",
    "wsrun": "^5.2.4"
  }
}
