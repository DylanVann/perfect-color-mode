{
  "private": true,
  "workspaces": [
    "docs",
    "examples/*",
    "packages/*"
  ],
  "scripts": {
    "build": "yarn && wsrun --stages --exclude-missing build && yarn build:md",
    "build:md": "esbuild --bundle build.ts --outfile=build.js --platform=node --target=node15.1",
    "serve": "wsrun --exclude-missing serve",
    "test": "wsrun --exclude-missing test"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.3",
    "esbuild": "^0.8.4",
    "fs-extra": "^9.0.1",
    "netlify-cli": "^2.68.0",
    "prettier": "^2.1.2",
    "wsrun": "^5.2.4"
  }
}
