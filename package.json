{
  "name": "perfect-dark-mode",
  "version": "0.0.1",
  "keywords": [
    "perfect",
    "color",
    "mode"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/DylanVann/perfect-dark-mode.git"
  },
  "author": "Dylan Vann <dylan@dylanvann.com> (https://dylanvann.com)",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "run-s build:js example:build",
    "build:js": "esbuild src/index.ts --platform=browser --outfile=dist/index.js --format=esm --minify --sourcemap",
    "build:ts": "tsc",
    "example:build": "run-s example:build:copy-lib example:build:html",
    "example:build:copy-lib": "cpx \"dist/**/*\" \"examples/vanilla/perfect-dark-mode\"",
    "example:build:html": "pug examples/vanilla/index.pug --pretty",
    "example:serve": "serve examples/vanilla"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "devDependencies": {
    "cpx": "^1.5.0",
    "jstransformer-markdown-it": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "pug": "^3.0.0",
    "pug-cli": "^1.0.0-alpha6",
    "serve": "^11.3.2"
  },
  "optionalDependencies": {
    "esbuild": "^0.7.10",
    "esbuild-linux-64": "^0.7.10"
  }
}
