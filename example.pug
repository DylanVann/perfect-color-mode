doctype html
html
    head
        title Perfect Color Mode Example
        style.
            @media (prefers-color-scheme: dark) {
                :root {
                    --color: white;
                    --background: black;
                }
            }

            @media (prefers-color-scheme: light) {
                :root {
                    --color: black;
                    --background: white;
                }
            }

            :root.light {
                --color: black;
                --background: white;
            }

            :root.dark {
                --color: white;
                --background: black;
            }

            :root {
                color: var(--color);
                background: var(--background);
            }
        script
            include dist/index.js
        script.
            const { mode } = window.__perfect_color_mode__
            mode.subscribe(v => console.log(v))
    body
        h1 Perfect Color Mode Example