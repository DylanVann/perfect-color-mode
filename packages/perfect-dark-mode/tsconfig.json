{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "types": ["jest", "node"],
    "declarationDir": "dist",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
