mixin badge(name, text, first=55, second=55)
    svg(xmlns='http://www.w3.org/2000/svg' xmlns:xlink='http://www.w3.org/1999/xlink' width=first + second height='20' role='img' aria-label=name + ': ' + text)
        title #{name}: #{text}
        g
            rect(width=first height='20' fill='#555')
            rect(x=first width=second height='20' fill='black' class="background")
        g(fill='#fff' text-anchor='middle' font-family='Verdana,Geneva,DejaVu Sans,sans-serif' text-rendering='geometricPrecision' font-size='110')
            - var factor = 7
            text(aria-hidden='true' x=first * 5 y='150' fill='#010101' fill-opacity='.3' transform='scale(.1)' textlength=first * factor) #{name}
            text(x=first * 5 y='140' transform='scale(.1)' fill='#fff' textlength=first * factor) #{name}
            text(aria-hidden='true' x=first * 10 + second * 5 y='150' fill='#010101' fill-opacity='.3' transform='scale(.1)' textlength=second * factor class="text-shadow") #{text}
            text(x=first * 10 + second * 5 y='140' transform='scale(.1)' fill='#fff' textlength=second * factor class="text") #{text}
