{
  "name": "perfect-dark-mode-docs",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "run-s build:copy:* build:options build:tailwind build:html",
    "build:copy:images": "cpx 'static/**/*' dist",
    "build:copy:lib": "cpx '../node_modules/perfect-dark-mode/dist/**/*' dist/perfect-dark-mode/dist",
    "build:copy:style-dark": "cpx ../node_modules/prism-themes/themes/prism-nord.css dist/syntax",
    "build:copy:style-light": "cpx ../node_modules/prism-themes/themes/prism-base16-ateliersulphurpool.light.css dist/syntax",
    "build:html": "pug index.pug --out dist --obj options.js",
    "build:options": "esbuild options.ts --format=cjs --outdir=.",
    "build:tailwind": "NODE_ENV=production postcss tailwind.css -o dist/tailwind.css",
    "dev": "run-p dev:live dev:html dev:tailwind",
    "dev:html": "pug index.pug --out dist --obj options.js --watch",
    "dev:live": "live-server dist",
    "dev:tailwind": "NODE_ENV=development postcss tailwind.css -o dist/tailwind.css --watch",
    "serve": "serve dist"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^3.0.0",
    "@tailwindcss/custom-forms": "^0.2.1",
    "@tailwindcss/typography": "^0.2.0",
    "@types/fs-extra": "^9.0.2",
    "cpx": "^1.5.0",
    "cssnano": "^4.1.10",
    "fontsource-libre-baskerville": "^3.0.9",
    "fontsource-montserrat": "^3.0.9",
    "fs-extra": "^9.0.1",
    "gzip-size": "^5.1.1",
    "live-server": "^1.2.1",
    "markdown-it": "^12.0.2",
    "markdown-it-toc-and-anchor": "^4.2.0",
    "npm-run-all": "^4.1.5",
    "perfect-dark-mode": "*",
    "postcss": "^8.1.4",
    "postcss-cli": "^8.1.0",
    "postcss-copy": "^7.1.0",
    "postcss-import": "^13.0.0",
    "prism-themes": "^1.5.0",
    "prismjs": "^1.22.0",
    "pug": "^3.0.0",
    "pug-cli": "^1.0.0-alpha6",
    "serve": "^11.3.2",
    "string.prototype.replaceall": "^1.0.3",
    "tailwindcss": "^1.9.6"
  }
}
